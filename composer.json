{
  "name": "linaphp/resource-watcher",
  "description": "A simple resource watcher using Symfony Finder",
  "keywords": [
    "resources",
    "watcher",
    "finder",
    "symfony"
  ],
  "license": "MIT",
  "homepage": "http://lina.daudau.cc",
  "authors": [
    {
      "name": "Victor Puertas",
      "email": "vpgugr@gmail.com"
    }
  ],
  "require": {
    "php": ">8.2",
    "symfony/finder": "^6.0"
  },
  "require-dev": {
    "symfony/filesystem": "^6.0",
    "phpunit/phpunit": "^11.0"
  },
  "autoload": {
    "psr-4": {
      "LinaPhp\\ResourceWatcher\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "LinaPhp\\ResourceWatcher\\Tests\\": "tests/"
    }
  },
  "scripts": {
    "test": "vendor/bin/phpunit"
  }
}
